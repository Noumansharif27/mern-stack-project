<%- layout("/layouts/boilerplate") %>
<body>
  <form action="/courses" method="post" class="new-course-form">
    <h2>Create New Course</h2>
    <div class="course-title">
      <label for="course-title">Title</label>
      <input
        type="text"
        name="course[title]"
        id="course-title"
        placeholder="AI & Ml with python"
        required
      />
    </div>

    <div class="course-description">
      <label for="course-description">Description</label>
      <input
        type="text"
        name="course[description]"
        id="course-description"
        placeholder="An amazing course on AI and ML"
        required
      />
    </div>

    <div class="course-image">
      <label for="course-image">Thumbnail/Image</label>
      <input
        type="text"
        name="course[image]"
        id="course-image"
        placeholder="https//:example.com+54512154sasf46s4d31dsd"
      />
    </div>

    <div class="course-price">
      <label for="course-price">Price</label>
      <input
        type="number"
        name="course[price]"
        id="course-price"
        placeholder="$18.5"
        required
        class="glowing-btn"
      />
    </div>

    <button class="btn tn-2">Create</button>
  </form>
</body>
