<% layout("/layouts/boilerplate") %>
<body class="show-course-pg">
  <main>
    <nav class="show-pg-nav">
      <h3 class="show-nav-course-title"><%= course.title %></h3>
      <h5>
        <span class="golden">3.8 &starf;</span>
        <a href="#">(9.7 rating)</a> 21,012 students
      </h5>
    </nav>
    <div class="course-details">
      <h1 class="course-title"><%= course.title %></h1>
      <p class="course-description"><%= course.description %></p>
      <div class="course-rating">
        <h5>
          3.8 <span>&starf;&starf;&starf;&starf;&star;</span>
          <a href="#">(9.7 rating)</a> 21,012 students
        </h5>
      </div>
      <div class="course-author">
        Created by <a href="#">@<%= course.author.username %></a>
      </div>
      <div class="course-additional-details">
        <p>
          <span>Last updated 1/2023</span> <span>English</span>
          <span>English (auto)</span>
        </p>
      </div>

      <div class="show-course-card">
        <div class="card-image">
          <img src="<%= course.image %>" alt="" />
          <img src="/assets/play-icon.svg" class="play-icon" />
        </div>
        <h3 class="card-status"><%= course.description %></h3>
        <div class="show-card-btns">
          <% if(currentUser && currentUser._id .equals(course.author._id)) { %>
          <form action="/courses/<%= course._id %>/edit" method="get">
            <button class="card-purchase-btn btn btn-2">Edit course</button>
          </form>
          <form action="/courses/<%= course._id%>?_method=DELETE" method="post">
            <button class="card-purchase-btn btn btn-2" type="submit">
              Delete Course
            </button>
          </form>
          <% } %> <% if(!currentUser || !currentUser._id
          .equals(course.author._id)) { %>
          <form action="/courses/<%= course._id%>/purchase" method="get">
            <button class="card-purchase-btn btn btn-2">Purchase course</button>
          </form>
          <% } %>
        </div>
        <span class="guarante-label">30-Day-Money-Back-Guarrantee</span>
        <div class="card-content-details">
          <h4>This curse includes:</h4>
          <ul>
            <li>
              <img src="/assets/play-icon.svg" alt="" /> 1 Hour on demand
              lectures
            </li>
            <li><img src="/assets/exams.svg" alt="" /> Practice exams</li>
            <li>
              <img src="/assets/clipboard.svg" alt="" /> Labs with passing marks
            </li>
            <li>
              <img src="/assets/ppt.svg" alt="" /> Theory and practical examples
            </li>
            <li><img src="/assets/ppt.svg" alt="" /> Articles</li>
            <li><img src="/assets/doc.svg" alt="" /> Research pappers</li>
          </ul>
          <div class="social-options">
            <h5 class="share">Share</h5>
            <h5>Gift this course</h5>
            <h5>Apply cupons</h5>
          </div>
        </div>

        <div class="card-teaching-offer">
          <h3>Training 5 or more people?</h3>
          <p>
            Training 5 or more peolpe? Get your team access to Future Academy
            with 10k+ premium courses.
          </p>
          <form action="/tutor" method="get">
            <button class="btn btn-2">Try FA Bussiness</button>
          </form>
        </div>
