<%- layout("/layouts/boilerplate") %>
<body>
  <form
    action="/courses/<%= course._id %>/edit"
    method="post"
    class="new-course-form"
  >
    <h2>Edit Course</h2>
    <div class="course-title">
      <label for="course-title">Title</label>
      <input
        type="text"
        name="course[title]"
        id="course-title"
        value="<%= course.title %>"
      />
    </div>

    <div class="course-description">
      <label for="course-description">Description</label>
      <input
        type="text"
        name="course[description]"
        id="course-description"
        value="<%= course.description %>"
      />
    </div>

    <div class="course-image">
      <label for="course-image">Thumbnail/Image</label>
      <input
        type="text"
        name="course[image]"
        id="course-image"
        value="<%= course.image %>"
      />
    </div>

    <div class="course-price">
      <label for="course-price">Price</label>
      <input
        type="number"
        name="course[price]"
        id="course-price"
        value="<%= course.price %>"
      />
    </div>

    <button class="btn tn-2">Update</button>
  </form>
</body>
