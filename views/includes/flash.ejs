<% if(success && success.length) { %>
<div
  class="alerts alert-success"
  style="background-color: #6de4a9; border-color: green; color: #000"
>
  <%= success %>
  <button class="alert-close-btn">
    <img src="/assets/alert-cross.svg" alt="" />
  </button>
</div>
<% } %> <% if(error && error.length) { %>
<div
  class="alerts alert-error"
  style="background-color: #ff000092; border-color: #ff0000; color: #000"
>
  <%= error %>
  <button class="alert-close-btn">
    <img src="/assets/alert-cross.svg" alt="" />
  </button>
</div>
<% } %>
